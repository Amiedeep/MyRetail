<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="@dimen/textview_width"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="40dp"
        android:id="@+id/header"
        android:text="MyRetail"
        android:textSize="@dimen/font_size" />

    <TextView
        android:layout_width="@dimen/textview_width"
        android:layout_height="@dimen/textview_height"
        android:layout_below="@+id/header"
        android:id="@+id/item"
        android:layout_marginLeft="40dp"
        android:textSize="18sp"
        android:textAppearance="@style/AppTheme" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="15sp"
        android:textAppearance="@style/AppTheme"
        android:layout_below="@+id/item"
        android:layout_alignLeft="@+id/item"
        android:layout_alignStart="@+id/item" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/image"
        android:layout_gravity="right"
        android:layout_weight="0.39"
        android:layout_alignTop="@+id/item"
        android:layout_alignRight="@+id/item"
        android:layout_alignEnd="@+id/item" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/detail"
        android:textSize="10sp"
        android:textAppearance="@style/AppTheme"
        android:layout_below="@+id/price"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price"
        android:textIsSelectable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:id="@+id/add_to_cart_button"
        android:layout_above="@+id/item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>